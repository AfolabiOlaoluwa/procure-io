.row-fluid
  .span3.sidebar-wrapper
    %form.bid-search-form#filter-form{"data-backbone-submit" => "submitSearch"}
      %input.search-query{"type" => "text", "data-rv-placeholder" => "pageOptions.sidebarCollapsed | not | then \"#{I18n.t('g.searches_all_fields')}\"", |
                          "data-rv-value" => "filterOptions.q"}
      %a.clear-search{"data-rv-show" => "filterOptions.q", "data-backbone-click" => "updateFilter", "data-backbone-params" => JSON.stringify({q: false, page: false})}
        %i.icon-remove-sign

    .clearfix

    #sidebar-filter-wrapper

    %h5
      Labels
      %a.smaller.regular-font{"data-backbone-click" => "toggleLabelAdmin", "data-toggle-text" => I18n.t('g.done_editing_labels')}= I18n.t('g.edit_labels')

    #label-filter-wrapper

    #label-admin-wrapper

  .span9.right-side-span

    != JST['shared/loading_indicator']()

    #actions-wrapper.faded-while-loading

    #pagination-wrapper.pull-right.faded-while-loading

    .clearfix

    .bids-table-wrapper
      .field-chooser.btn-group.dropdown-left

      %table.table#bids-table.faded-while-loading
        %thead#bids-thead

        %tbody#bids-tbody

    %small.pull-left
      %a{"data-toggle-text" => "Restore sidebar &rarr;", "data-backbone-click" => "toggleCollapseSidebar"} &larr; Collapse sidebar

    %small.pull-right
      %a{"data-backbone-click" => "viewFilteredEmails"} Get emails for filtered vendors


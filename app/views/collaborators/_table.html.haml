%table.table.table-nonfluid#collaborators-table
  %thead
    %tr
      %th= Officer.human_attribute_name(:name)
      %th= User.human_attribute_name(:email)
      %th= t('globals.status')
      %th= t('globals.actions')

  %tbody#collaborators-tbody
    - collaborators.each do |collaborator|
      = render "collaborator", collaborator: collaborator

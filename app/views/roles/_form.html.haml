= form_for @role, html: {"data-validate" => "parsley"} do |f|
  .control-group
    = f.required_label :name
    = f.text_field :name, "data-required" => true

  .control-group
    = f.required_label :permission_level
    = f.select :permission_level, options_for_select(@permission_level_options, @role.permission_level)

  .form-actions
    = f.submit class: "btn btn-primary"
- provide :page_title, t('globals.reset_password')
!= page_header t('globals.reset_password')

.alert.alert-info= t('.sorry_you_forgot_it_html', name: @user.display_name)

= form_for @user, url: users_reset_password_path, method: :post do |f|
  = f.label :password
  = f.password_field :password, autofocus: true

  .form-actions
    = f.submit t('globals.submit'), class: "btn btn-inverse"

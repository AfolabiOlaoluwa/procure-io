- provide :page_title, t('.header')
!= page_header t('.header')

.alert.alert-info= t('.create_password_instructions_html', name: @user.display_name, site_name: t('globals.site_name'))

= form_for @user, url: users_accept_invite_path, method: :post do |f|
  = f.label :password
  = f.password_field :password, autofocus: true

  .form-actions
    = f.submit t('globals.submit'), class: "btn btn-inverse"

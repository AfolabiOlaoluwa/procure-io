- provide :page_title, "Accept Invite"

!= page_header t('.header')

.alert.alert-info
  Hey <strong>#{@user.email}</strong>! To finish creating your account on #{t('globals.site_name')}, simply create a password below.

= form_for @user, url: users_accept_invite_path, method: :post do |f|
  = f.label :password
  = f.password_field :password, autofocus: true

  .form-actions
    = f.submit 'Save', class: "btn btn-inverse"
!!! 5

%head
  %title!= full_title(yield(:page_title), yield(:page_action))
  = stylesheet_link_tag "application", media: "all"
  = javascript_include_tag "application"
  :javascript
    ProcureIo.env = '#{Rails.env}';
    ProcureIo.GlobalConfig = #{GlobalConfigSerializer.new(GlobalConfig.instance, root: false).to_json};
    ProcureIo.CurrentOfficerId = #{current_officer ? current_officer.id : 'undefined'};
    ProcureIo.CurrentOfficer = #{current_officer ? OfficerSerializer.new(current_officer, root: false).to_json : 'undefined'};
    ProcureIo.CurrentVendorId = #{current_vendor ? current_vendor.id : 'undefined'};
  = csrf_meta_tags
  = render 'layouts/shim'

%body{"data-controller" => params[:controller], "data-action" => params[:action]}
  = render 'layouts/navbar'

  .outer-container
    .container
      = render "layouts/flash", flash: flash
      = yield

  %footer#footer
    .container
      = t('.footer_html')

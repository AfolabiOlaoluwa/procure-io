- provide :page_title, t('globals.admin')

!= page_header t('globals.admin')

%ul.nav.nav-tabs
  - if can? :update, Officer
    %li{"class" => active_page?("officers")}
      = link_to t('globals.officers'), officers_path
  - if can? :view, Vendor
    %li{"class" => active_page?("vendors")}
      = link_to t('globals.vendors'), vendors_path
  - if can? :manage, Role
    %li{"class" => active_page?("roles")}
      = link_to t('globals.roles'), roles_path

  - if can? :manage, GlobalConfig
    %li{"class" => active_page?("global_config#vendor_registration")}
      =link_to t('globals.vendor_registration'), global_config_vendor_registration_path

    %li{"class" => active_page?("global_config#event_hooks")}
      =link_to t('globals.event_hooks'), global_config_event_hooks_path

    %li{"class" => active_page?("global_config#advanced")}
      =link_to t('globals.advanced'), global_config_advanced_path

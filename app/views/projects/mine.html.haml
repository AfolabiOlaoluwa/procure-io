- provide :page_title, t('globals.my_projects')

!=page_header t('globals.my_projects')

%a.btn.btn-small{"href" => new_project_path}= t('globals.new_project')

%table.table.table-boredered
  %thead
    %tr
      %th= t('globals.type')
      %th= t('globals.project_title')
      %th= t('globals.number_of_bids')
      %th= t('globals.bids_due')

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.tags.map(&:name).join(', ')
        %td= link_to project.title, edit_project_path(project)
        %td= link_to project.bids.submitted.count, project_bids_path(project)
        %td
          - if project.bids_due_at
            = project.bids_due_at.to_formatted_s(:readable)
          - else
            = t('globals.open_for_bids')

= will_paginate @projects, class: "pagination pagination-centered"

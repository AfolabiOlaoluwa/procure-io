- provide :page_title, t('globals.browse_projects')

!= page_header t('globals.browse_projects')

.basic-projects-list
  - @projects.each do |project|
    .project
      = link_to project.title, project, class: "project-title"
      - if project.featured?
        %i.icon-star
      .abstract
        = project.abstract_or_truncated_body
        = link_to t('globals.read_more'), project
      .bids-due
        - if project.bids_due_at
          = t('globals.bids_due_on', date: project.bids_due_at.to_formatted_s(:readable_dateonly))
        - else
          = t('globals.open_for_bids')

%label
  =response_field[:label]
  - if response_field[:field_options]["required"]
    %span.required-asterisk *

- response_field[:field_options]["options"].each_with_index do |option, i|
  - if value
    - checked = value && value[option["label"]]
  - else
    - checked = options["checked"]

  %label.checkbox
    = option["label"]
    %input{"type" => "checkbox", "name" => "response_fields[#{response_field[:id]}][#{i}]", |
          "checked" => checked}

%span.help-block= response_field[:field_options]["description"]

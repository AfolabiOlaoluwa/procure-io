= render "projects/officer_nav"

- if can? :destroy, @bid
  = link_to t('actions.bid.delete'), project_bid_path(@project, @bid), method: :delete, confirm: t('confirmations.bid.delete')

#bid-page
  :javascript
    new ProcureIo.Backbone.BidPageView({bootstrapData: #{@bid_json}, project: #{ProjectSerializer.new(@project, root: false).to_json}});

- if GlobalConfig.instance[:comments_enabled]
  #comment-page
    :javascript
      new ProcureIo.Backbone.CommentPageView({bootstrapData: #{@comments_json}, commentableType: "bid", commentableId: #{@bid.id}});

= link_to @bid.watched_by?(current_user) ? t('.watching_bid') : t('.watch_bid'), watches_path("Bid", @bid), method: :post, class: "btn #{@bid.watched_by?(current_user) ? 'btn-inverse' : ''}"
